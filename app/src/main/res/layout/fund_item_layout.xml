    <android.support.v7.widget.CardView
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cv_vacancy_item"
        android:padding="2dp"
        app:cardCornerRadius="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <TextView
                android:textStyle="bold"
                android:id="@+id/tv_fund_name"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vacancy name"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_weight="0.8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textSize="15.5sp"/>
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/tv_category"
                    android:textSize="15.5sp"
                    android:text=": category"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Returns:"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="0.8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="1 yr"
                    android:textSize="15.5sp"/>
                <TextView
                    android:textColor="#33b864"
                    android:id="@+id/tv_return_1"
                    android:textSize="15.5sp"
                    android:text=": 2.3%"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="0.8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="3 yrs"
                    android:textSize="15.5sp"/>
                <TextView
                    android:textColor="#33b864"
                    android:id="@+id/tv_return_3"
                    android:textSize="15.5sp"
                    android:text=": 7.2%"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="0.8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="5 yrs"
                    android:textSize="15.5sp"/>
                <TextView
                    android:id="@+id/tv_return_5"
                    android:textColor="#33b864"
                    android:textSize="15.5sp"
                    android:text=": 8%"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <Button
                android:textSize="16sp"
                android:textStyle="bold"
                android:id="@+id/bt_add_to_compare"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add to compare"/>
        </LinearLayout>



    </android.support.v7.widget.CardView>



